{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "automerge": true,
  "automergeType": "branch",
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchFileNames": [".github/workflows/**"],
      "automerge": false
    }
  ]
}
